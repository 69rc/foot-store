# Database Configuration
# For local PostgreSQL:
DATABASE_URL=postgresql://username:password@localhost:5432/solestyle

# For Neon (cloud PostgreSQL):
# DATABASE_URL=postgresql://username:password@ep-example.us-east-1.aws.neon.tech/solestyle?sslmode=require

# Session Security (generate a secure random string)
SESSION_SECRET=your-super-secret-key-here-change-this-to-something-random-and-secure

# Local Development Auth
NODE_ENV=development
USE_LOCAL_AUTH=true
REPL_ID=local-dev
REPLIT_DOMAINS=localhost:5000,127.0.0.1:5000
ISSUER_URL=https://replit.com/oidc

# PostgreSQL Connection Details (auto-extracted from DATABASE_URL)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=password
PGDATABASE=solestyle